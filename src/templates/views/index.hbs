    <main>
        {{>heroSection}}
        {{>productCarousel}}
        {{>partners}}
    </main>

    <footer></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        let userNameButton = document.querySelector('#userNameButton');
        let modal = document.querySelector('#modal');
        let closeButton = document.querySelector('.close-btn');
        let nameLabel = document.querySelector('#name');
        let emailLabel = document.querySelector('#email');
        let contactLabel = document.querySelector('#contact');

        // Open User Info Modal
        userNameButton.addEventListener('click', async (e) => {
            let name = document.querySelector('#userNameButton').innerText;
            e.preventDefault();
            let baseUrl = `/getuser/${name}`;
            let promise = await fetch(baseUrl);
            let parsedData = await promise.json();
            nameLabel.innerText = parsedData.name;
            emailLabel.innerText = parsedData.email;
            contactLabel.innerText = parsedData.contact;
            modal.style.display = 'block';
        });

        // Close User Info Modal
        closeButton.addEventListener('click', (e) => {
            e.preventDefault();
            modal.style.display = 'none';
        });

        // Update Modal
        let modal2 = document.querySelector('#contactModal');
        let updateButton = document.querySelector('#updateButton');
        let contactModalClose = document.querySelector('#contactModalClose');
        let nameInputValue = document.querySelector('#contactName');
        let contactInputValue = document.querySelector('#contactPhone');

        updateButton.addEventListener('click', (e) => {
            modal2.style.display = 'block';
            nameInputValue.value = nameLabel.innerText;
            contactInputValue.value = contactLabel.innerText;
        });

        // Close Update Modal
        contactModalClose.addEventListener('click', (e) => {
            e.preventDefault();
            modal2.style.display = 'none';
        });


        const divSuccess = document.querySelector('.alert');
        setTimeout(() => {
            divSuccess.classList.add('fade-out');
            setTimeout(() => {
                divSuccess.style.display = 'none';
            }, 1200);
        }, 600);


        // delete account :
        let deleteAccountButton = document.querySelector('#deleteAccountButton');
        deleteAccountButton.addEventListener('click', async (e) => {
            try {
                e.preventDefault();
                let baseUrl = '/deleteuser'
                let response = await fetch(baseUrl, {
                    method: 'DELETE',
                });
                const data = await response.json();

                if (response.ok) {
                   // Render the register page with the updateMess passed to it
                    window.location.href = `/register?message=${encodeURIComponent(data.updateMess)}`;
                } else {
                    alert(data.message || 'Failed to delete account');
                }
            } catch (error) {
                alert('An error occurred');
            }
        });




    </script>
</body>

</html>